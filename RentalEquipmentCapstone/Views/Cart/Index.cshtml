@{
    Layout = "_Layout";

}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>

<body>
    <h3>CART</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Option</th>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td><a asp-controller="cart" asp-action="remove" asp-route-id="@item"></a></td>
                <td>@item.Product.Id</td>
                <td>@item.Product.Name</td>
                <td><img src="~/images/@item.Photo" width="60" /></td>
                <td>@item.Product.Price</td>
                <td>@item.Product.Quantity</td>
                <td>@(item.Product.Price * item.Quantity )</td>
            </tr>
        }

        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>@ViewBag.total</td>
        </tr>
    </table>
    <br />
    <a asp-controller="product" asp-action="index">Continue Shopping</a>
    <a asp-controller="checkout" asp-action="index" asp-route-id="">Go To Checkout</a>
</body>
</html>